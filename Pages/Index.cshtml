@page
@model IndexModel
@{
    ViewData["Title"] = "Flipkart Clone";
    Layout = null; // remove if you use _Layout.cshtml
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f1f3f6;
        }

        .navbar {
            background-color: #2874f0;
        }

        .navbar-brand,
        .nav-link,
        .search-btn {
            color: #fff !important;
        }

        .search-box {
            width: 400px;
        }

        .category-card img {
            height: 80px;
            object-fit: contain;
        }

        .product-card img {
            height: 180px;
            object-fit: contain;
        }

        .product-card:hover {
            transform: scale(1.02);
            transition: 0.3s;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#">Flipkart</a>

            <form class="d-flex mx-auto">
                <input class="form-control search-box" type="search" placeholder="Search for products, brands and more">
                <button class="btn btn-warning ms-2 search-btn" type="submit">Search</button>
            </form>

            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" href="#">Login</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Cart</a></li>
            </ul>
        </div>
    </nav>

    <!-- Categories -->
    <div class="container my-4">
        <div class="row text-center bg-white p-3 rounded">
            <div class="col category-card">
                <img src="https://via.placeholder.com/100" />
                <p>Mobiles</p>
            </div>
            <div class="col category-card">
                <img src="https://via.placeholder.com/100" />
                <p>Fashion</p>
            </div>
            <div class="col category-card">
                <img src="https://via.placeholder.com/100" />
                <p>Electronics</p>
            </div>
            <div class="col category-card">
                <img src="https://via.placeholder.com/100" />
                <p>Home</p>
            </div>
            <div class="col category-card">
                <img src="https://via.placeholder.com/100" />
                <p>Appliances</p>
            </div>
        </div>
    </div>

    <!-- Products -->
    <div class="container">
        <h5 class="mb-3">Best Deals</h5>
        <div class="row g-3">

            @for (int i = 1; i <= 8; i++)
            {
                <div class="col-md-3">
                    <div class="card product-card">
                        <img src="https://via.placeholder.com/200" class="card-img-top" />
                        <div class="card-body text-center">
                            <h6 class="card-title">Product @i</h6>
                            <p class="text-success fw-bold">₹@(i * 1999)</p>
                            <button class="btn btn-sm btn-primary">Add to Cart</button>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-light mt-5 p-4 text-center">
        © 2026 Flipkart Clone | Built with ASP.NET Razor Pages
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
